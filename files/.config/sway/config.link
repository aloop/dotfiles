### Per-application Settings

for_window [class="Steam"] floating enable
for_window [title="Preferences$"] floating enable


### Set Background image and fallback color
output "*" bg "#000000" solid_color

### Commands to run on startup

include "/etc/sway/config.d/*"

include "${XDG_CONFIG_HOME:-$HOME/.config}/sway/config.d/*.conf"

# Status bar
bar swaybar_command $bar

# Notifications
exec --no-startup-id $notifications

# Redshift
exec $redshift

# Idle command
exec swayidle -w \
    timeout 1800 'swaylock -f -c 222222' \
    timeout 1200 'swaymsg "output * dpms off"' \
        resume 'sleep 2 && swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f -c 222222'
