# .before is intended as a local override for certain settings
if [ -f "$HOME/.before" ]; then
    . "$HOME/.before"
fi

shell_includes=(
    "$HOME/.aliases"
    "$HOME/.functions"
    "$HOME/.exports"
    "$HOME/.path"
    "$HOME/.nvm/nvm.sh"
    "${shell_includes[@]}"
    "$HOME/.after"
    "$HOME/.rvm/scripts/rvm"
)

for shell_include in "${shell_includes[@]}"; do
    if [ "${shell_include:-}" ] && [ -f "$shell_include" ]; then
        . "$shell_include"
    fi
done

# This isn't necessary, but I like to clean up.
unset shell_include shell_includes
