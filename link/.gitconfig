[core]
	editor = vim
	excludesfile = ~/.gitignore_global
	pager = less -r
[color]
	ui = true
[push]
	default = simple
[pull]
	rebase = true
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	d = difftool
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[include]
	path = ~/.gitconfig-custom
