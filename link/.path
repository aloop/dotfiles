new_paths=("$HOME/.rvm/bin" "/usr/local/share/npm/bin")

for new_path in "${new_paths[@]}"; do
    if [ -e "$new_path" ]; then
        PATH="$new_path:$PATH"
    fi
done

# If homebrew is installed, prepend it bin dirs onto $PATH
if command -v brew >/dev/null 2>&1; then
    PATH="/usr/local/sbin:/usr/local/bin:$(echo "$PATH" | sed 's/:\/usr\/local\/bin//')"

    if [ -e "$(brew --prefix josegonzalez/php/php55)/bin" ]; then
        PATH="$(brew --prefix josegonzalez/php/php55)/bin:$PATH"
    fi
fi

