# Standard path additions are defined here, these should be safe to include
# cross-platform.
#
# You can add more on a per-machine basis by defining one of
# these arrays in a ~/.before file. Paths added in ~/.before are extended with
# the defaults defined in this file.
prepend_paths=("/usr/local/sbin"
               "/usr/local/bin"
               "${prepend_paths[@]}")

append_paths=("${append_paths[@]}"
              "$HOME/.cabal/bin")

# If we have Golang set up, lets add its binaries to the path
if [ -n $GOPATH ]; then
    append_paths=("${append_paths[@]}"
                  "$GOPATH/bin")
fi

for new_path in "${prepend_paths[@]}"; do
    if [ -d "$new_path" ]; then
        PATH="$new_path:$(echo "$PATH" | sed -e "s|:${new_path}||" -e "s|${new_path}:||")"
    fi
done

for new_path in "${append_paths[@]}"; do
    if [ -d "$new_path" ]; then
        PATH="$(echo "$PATH" | sed -e "s|:${new_path}||" -e "s|${new_path}:||"):$new_path"
    fi
done
