# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        position       top
        status_command $HOME/.i3/conky.sh

        colors {
            separator #002b36
            background #002b36
            statusline #268bd2
            active_workspace #839496 #839496 #fdf6e3
            focused_workspace #657b83 #657b83 #fdf6e3
            inactive_workspace #eee8d5 #eee8d5 #002b36
            urgent_workspace #268bd2 #268bd2 $base3
        }
}

client.focused #657b83 #657b83 #fdf6e3 #657b83
client.focused_inactive #073642 #073642 #eee8d5 #6c71c4
client.unfocused #073642 #073642 #93a1a1 #586e75
client.urgent #268bd2 #268bd2 #fdf6e3 #dc322f


# ------------------------
# ---- Exec On Startup
# ------------------------

exec --no-startup-id compton -Cb
exec --no-startup-id dunst -config $HOME/.i3/dunstrc
exec --no-startup-id udiskie --tray
exec --no-startup-id chromium
exec --no-startup-id urxvt


# ------------------------
# ---- Key Bindings
# ------------------------

bindsym $mod+c exec --no-startup-id chromium
bindsym $mod+m exec --no-startup-id clementine
bindsym $mod+b exec --no-startup-id thunar

bindsym XF86AudioRaiseVolume exec amixer set Master 2.5%+ unmute
bindsym XF86AudioLowerVolume exec amixer set Master 2.5%- unmute

# ------------------------
# ---- Key Bindings
# ------------------------

for_window [class="Vlc"] floating enable

assign [class="^URxvt$"] $WS1
assign [class="Chromium"] $WS2
assign [class="Clementine"] $WS4
