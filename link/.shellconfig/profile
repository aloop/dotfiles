df_source() {
    if [ -f "$1" ]; then
        . "$1"
    fi
}

# .before is intended as a local override for certain settings
df_source "$HOME/.before"

# Main enviroment setup
df_source "$HOME/.shellconfig/functions"
df_source "$HOME/.shellconfig/exports"
df_source "$HOME/.shellconfig/path"
df_source "$HOME/.shellconfig/aliases"

# Third-party Scripts
df_source "$HOME/.nvm/nvm.sh"
df_source "$HOME/.rvm/scripts/rvm"

# Use .after for things that you want to set after everything else
df_source "$HOME/.after"

unset -f df_source
